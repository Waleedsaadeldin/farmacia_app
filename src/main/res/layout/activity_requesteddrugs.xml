<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".requesteddrugs">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"


        android:layout_width="match_parent"


        android:layout_height="?attr/actionBarSize"


        android:background="@color/luxuryBlue"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requested Drugs"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_editor_absoluteX="90dp"
        app:layout_editor_absoluteY="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:hint="search"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_editor_absoluteX="90dp"
        app:layout_editor_absoluteY="100dp"
        android:backgroundTint="@color/luxuryBlue"
        tools:ignore="MissingConstraints" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_item"


        />


</androidx.constraintlayout.widget.ConstraintLayout>